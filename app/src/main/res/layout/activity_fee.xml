<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/main_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="费用清单"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/bg_radius_downright_right"
            android:layout_width="240px"
            android:layout_height="100px" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_radius_transwhite"
        android:layout_width="1600px"
        android:layout_height="700px">

        <LinearLayout
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="50px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="日期"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="项目编号"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="0.8"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="项目名称"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="数量"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="单位"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="单价"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_gray"
                android:textColor="#000000"
                android:text="金额"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ListView
            android:id="@+id/feelist"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="50px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <RelativeLayout
        android:background="#cc000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:text="开始时间"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:layout_margin="10px"
                android:background="@drawable/button_selector_none"
                android:id="@+id/startTiem"
                android:gravity="center"
                android:layout_width="300px"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:text="结束时间"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:layout_margin="10px"
                android:background="@drawable/button_selector_none"
                android:id="@+id/endTiem"
                android:gravity="center"
                android:layout_width="300px"
                android:layout_height="match_parent" />
            <Button
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:layout_margin="10px"
                android:background="@drawable/button_selector_gray"
                android:id="@+id/search"
                android:text="查询"
                android:gravity="center"
                android:layout_width="200px"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:nextFocusLeft="@+id/grid"
                android:id="@+id/up"
                android:layout_margin="10px"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_selector_gray"
                android:text="上一页"
                android:layout_width="200px"
                android:layout_height="match_parent"  />

            <TextView
                android:layout_marginLeft="20px"
                android:text="0"
                android:gravity="center"
                android:id="@+id/index"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:text="/"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:id="@+id/all"
                android:layout_marginRight="20px"
                android:text="0"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:nextFocusLeft="@+id/up"
                android:id="@+id/down"
                android:layout_margin="10px"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_selector_gray"
                android:text="下一页"
                android:layout_width="200px"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>