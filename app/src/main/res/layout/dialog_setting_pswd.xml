<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="700px"
    android:background="@drawable/bg_radius_transwhite"
    android:layout_height="500px">
    <TextView
        android:gravity="center"
        android:text="请输入密码"
        android:textSize="50px"
        android:layout_margin="20px"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/edit_selector"
        android:layout_margin="20px"
        android:id="@+id/pswd"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:text="确认"
            android:id="@+id/ok"
            android:nextFocusRight="@+id/cancel"
            android:textColor="#FFFFFF"
            android:layout_margin="20px"
            android:background="@drawable/button_selector_gray"
            android:layout_height="100px"
            android:layout_width="300px"/>
        <Button
            android:nextFocusLeft="@+id/ok"
            android:text="取消"
            android:id="@+id/cancel"
            android:textColor="#FFFFFF"
            android:layout_margin="20px"
            android:background="@drawable/button_selector_gray"
            android:layout_height="100px"
            android:layout_width="300px"/>
    </LinearLayout>
</LinearLayout>