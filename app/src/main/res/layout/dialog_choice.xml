<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="700px"
    android:background="@drawable/bg_radius_transwhite"
    android:layout_height="550px">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="20px"
            android:background="#000000"
            android:id="@+id/img"
            android:layout_width="300px"
            android:layout_height="300px" />
        <LinearLayout
            android:layout_marginTop="20px"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:text="1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:text="1"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000000"
                android:text="1"
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_margin="10px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="确认"
            android:nextFocusRight="@+id/cancel"
            android:background="@drawable/button_selector_gray"
            android:id="@+id/ok"
            android:layout_width="200px"
            android:layout_height="100px" />
        <Button
            android:nextFocusLeft="@+id/ok"
            android:layout_marginLeft="50px"
            android:background="@drawable/button_selector_gray"
            android:text="取消"
            android:id="@+id/cancel"
            android:layout_width="200px"
            android:layout_height="100px"  />
    </LinearLayout>

</RelativeLayout>