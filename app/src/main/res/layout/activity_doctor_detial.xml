<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_width="820px"
            android:layout_height="match_parent" />
        <TextView
            android:text="科室专家"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/bg_radius_downright_right"
            android:layout_width="240px"
            android:layout_height="100px" />
    </RelativeLayout>

    <LinearLayout
        android:background="#cc46a8ba"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100px">
            <TextView
                android:textColor="#FFFFFF"
                android:text="姓名"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:background="#FFFFFF"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:text="王小二"
                android:textColor="#FFFFFF"
                android:id="@+id/name"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100px">
            <TextView
                android:textColor="#FFFFFF"
                android:text="职称"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:background="#FFFFFF"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:text="主任医师，副教授"
                android:textColor="#FFFFFF"
                android:id="@+id/post"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100px">
            <TextView
                android:textColor="#FFFFFF"
                android:text="特长"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:background="#FFFFFF"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:text="擅长于滋养细胞肿瘤疾病的诊治"
                android:textColor="#FFFFFF"
                android:id="@+id/goodat"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100px">
            <TextView
                android:textColor="#FFFFFF"
                android:text="就诊时间"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:background="#FFFFFF"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:text="每周一，周二，周五"
                android:textColor="#FFFFFF"
                android:id="@+id/time"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/detial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>